{
  "name": "pixelmcpserver",
  "version": "1.0.0",
  "description": "Pixel art MCP server",
  "homepage": "https://github.com/jsreed/PixelMCPServer#readme",
  "bugs": {
    "url": "https://github.com/jsreed/PixelMCPServer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsreed/PixelMCPServer.git"
  },
  "license": "UNLICENSED",
  "author": "Jackson Reed",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pixelmcpserver": "./dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^4.0.18"
  }
}
